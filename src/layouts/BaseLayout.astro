---
import { ClientRouter } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'ITSA Studio — Design with a Soul',
  description = 'ITSA Studio is the creative practice of Philip Glenn and Teagan Lindsay — a Seattle-based design studio specializing in brand identity, digital design, and art direction.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="ITSA Studio" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://itsastudio.com" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <title>{title}</title>

    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site).href} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preload critical font -->
    <link
      rel="preload"
      href="/fonts/TechSchool.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <ClientRouter />
  </head>
  <body>
    <slot />

    <!-- Structured Data -->
    <script is:inline type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "ITSA Studio",
        "description": "ITSA Studio is the creative practice of Philip Glenn and Teagan Lindsay — a Seattle-based design studio.",
        "url": "https://itsastudio.com"
      }
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
  @import '../styles/typography.css';
</style>
