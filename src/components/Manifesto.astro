---
interface Props {
  text?: string;
}

const { text = "The advancement of technology doesn't need to come at the expense of human creativity." } = Astro.props;
---

<section class="manifesto" data-manifesto>
  <div class="manifesto__inner">
    <p class="manifesto__text" data-manifesto-text>
      {text}
    </p>
  </div>
</section>

<style>
  .manifesto {
    background-color: var(--color-accent);
    color: var(--color-bg);
    padding: 12vh var(--spacing-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 50vh;
  }

  .manifesto__inner {
    max-width: 48ch;
    margin: 0 auto;
    text-align: center;
  }

  .manifesto__text {
    font-size: clamp(1.4rem, 2.8vw, 2.2rem);
    line-height: 1.35;
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .manifesto {
      padding: 8vh var(--spacing-md);
      min-height: 40vh;
    }
  }
</style>
