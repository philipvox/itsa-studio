---
interface Props {
  text?: string;
}

const { text = 'DESIGN WITH A SOUL' } = Astro.props;
const words = text.split(' ');
---

<div class="tagline" data-tagline aria-label={text}>
  <div class="tagline__inner">
    {words.map((word) => (
      <span class="tagline__word type-subhead">{word}</span>
    ))}
  </div>
  <div class="tagline__line"></div>
</div>

<style>
  .tagline {
    padding: var(--spacing-md) var(--spacing-lg);
  }

  .tagline__inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 100%;
    padding-bottom: var(--spacing-md);
  }

  .tagline__word {
    color: var(--color-accent);
  }

  .tagline__line {
    height: 1px;
    background-color: var(--color-blue);
  }

  @media (max-width: 480px) {
    .tagline {
      padding: var(--spacing-sm) var(--spacing-sm);
    }

    .tagline__inner {
      padding-bottom: var(--spacing-sm);
    }
  }
</style>
