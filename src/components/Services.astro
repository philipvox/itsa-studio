---
interface Props {
  items?: string[];
}

const { items = [
  'Brand Identity',
  'Digital Design',
  'Art Direction',
  'Creative Strategy',
  'Web Development',
  'Motion Design',
] } = Astro.props;
---

<section class="services" data-services>
  <div class="services__inner">
    <div class="services__header">
      <span class="services__label type-body">What we do</span>
    </div>
    <ul class="services__list" role="list">
      {items.map((item) => (
        <li class="services__item" data-services-item>
          <span class="services__name type-headline">{item}</span>
          <svg class="services__arrow" width="14" height="14" viewBox="0 0 14 14" aria-hidden="true">
            <path d="M1 13L13 1M13 1H3M13 1V11" stroke="currentColor" stroke-width="1.5" fill="none"/>
          </svg>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  .services {
    padding: var(--spacing-xl) var(--spacing-lg);
  }

  .services__inner {
    max-width: var(--max-width);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--spacing-lg);
  }

  .services__label {
    color: var(--color-text);
    opacity: 0.4;
  }

  .services__list {
    display: flex;
    flex-direction: column;
  }

  .services__item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-sm) 0;
    border-top: 1px solid rgba(26, 26, 26, 0.12);
    color: var(--color-text);
    cursor: default;
  }

  .services__item:last-child {
    border-bottom: 1px solid rgba(26, 26, 26, 0.12);
  }

  .services__arrow {
    opacity: 0;
    transform: translateX(-4px);
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .services__item:hover .services__arrow {
    opacity: 0.4;
    transform: translateX(0);
  }

  .services__item:hover .services__name {
    opacity: 0.6;
  }

  .services__name {
    transition: opacity 0.2s ease;
  }

  @media (max-width: 768px) {
    .services {
      padding: var(--spacing-xl) var(--spacing-md);
    }

    .services__inner {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
  }
</style>
