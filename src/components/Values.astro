---
interface Props {
  items?: { number: string; description: string }[];
}

const { items = [
  { number: '01', description: 'We work with computers to make real things' },
  { number: '02', description: 'We work with humans to make things computers can\'t' },
  { number: '03', description: 'We work with companies to make things work for their users' },
] } = Astro.props;
---

<section class="values" data-values>
  <div class="values__inner">
    <div class="values__header">
      <span class="values__label type-body">What we believe</span>
    </div>
    <div class="values__list">
      {items.map((value) => (
        <article class="values__item" data-values-item>
          <span class="values__number type-body">{value.number}</span>
          <p class="values__description type-headline">{value.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .values {
    padding: var(--spacing-xl) var(--spacing-lg);
  }

  .values__inner {
    max-width: var(--max-width);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--spacing-lg);
  }

  .values__label {
    color: var(--color-text);
    opacity: 0.4;
  }

  .values__list {
    display: flex;
    flex-direction: column;
  }

  .values__item {
    display: flex;
    align-items: baseline;
    gap: var(--spacing-md);
    padding: var(--spacing-md) 0;
    border-top: 1px solid rgba(26, 26, 26, 0.12);
    color: var(--color-accent);
  }

  .values__item:last-child {
    border-bottom: 1px solid rgba(26, 26, 26, 0.12);
  }

  .values__number {
    flex-shrink: 0;
    opacity: 0.4;
    min-width: 2rem;
  }

  .values__description {
    max-width: 45ch;
  }

  @media (max-width: 768px) {
    .values {
      padding: var(--spacing-xl) var(--spacing-md);
    }

    .values__inner {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .values__item {
      gap: var(--spacing-sm);
    }
  }
</style>
