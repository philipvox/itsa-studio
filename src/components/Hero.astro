  .hero__content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: clamp(2rem, 6vw, 6rem);
    width: 100%;
    max-width: var(--max-width);
  }

  .hero__text {
    flex-shrink: 0;
  }

  .hero__text--left {
    text-align: right;
  }

  .hero__text--right {
    text-align: left;
  }

  .hero__mascot {
    flex-shrink: 0;
    color: var(--color-accent);
  }

  .hero__mascot-svg {
    width: auto;
    height: clamp(200px, 40vh, 400px);
  }

  @media (max-width: 768px) {
    .hero__content {
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .hero__text--left,
    .hero__text--right {
      text-align: center;
    }

    .hero__mascot {
      order: -1;
    }
  }
</style>
